<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">


    <Color
        x:Key="ColorRed">
        #FFA33749
    </Color>
    <Color
        x:Key="ColorOrange">
        #FFBD832A
    </Color>
    <Color
        x:Key="ColorBlue">
        #FF566C7B
    </Color>
    <Color
        x:Key="ColorGrey">
        #FF9B9B9B
    </Color>

    <SolidColorBrush
        x:Key="BrushRed"
        Color="{StaticResource ColorRed}"/>
    <SolidColorBrush
        x:Key="BrushOrange"
        Color="{StaticResource ColorOrange}"/>
    <SolidColorBrush
        x:Key="BrushBlue"
        Color="{StaticResource ColorBlue}"/>
    <SolidColorBrush
        x:Key="BrushGrey"
        Color="{StaticResource ColorGrey}"/>

</ResourceDictionary>